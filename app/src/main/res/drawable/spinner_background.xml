<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?attr/colorSurfaceContainerHigh"/>
                    <corners android:radius="12dp"/>
                    <stroke android:width="2dp" android:color="?attr/colorPrimaryContainer"/>
                </shape>
            </item>
            <item android:gravity="end|center_vertical" android:right="16dp">
                <bitmap android:src="@drawable/ic_water_drop"
                    android:tint="?attr/colorPrimary"
                    android:gravity="center"
                    android:width="24dp"
                    android:height="24dp"/>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?attr/colorSurfaceContainerHigh"/>
                    <corners android:radius="12dp"/>
                    <stroke android:width="1dp" android:color="?attr/colorOutlineVariant"/>
                </shape>
            </item>
            <item android:gravity="end|center_vertical" android:right="16dp">
                <bitmap android:src="@drawable/ic_water_drop"
                    android:tint="?attr/colorOnSurfaceVariant"
                    android:gravity="center"
                    android:width="24dp"
                    android:height="24dp"/>
            </item>
        </layer-list>
    </item>
</selector>