<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_habit_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="#F2F2F2"
            android:gravity="center"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ðŸƒ" />

        <TextView
            android:id="@+id/tv_habit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/background_dark"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_habit_description"
            app:layout_constraintEnd_toStartOf="@+id/cb_complete"
            app:layout_constraintStart_toEndOf="@+id/tv_habit_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Daily Exercise" />

        <TextView
            android:id="@+id/tv_habit_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/grey_text"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/progress_habit"
            app:layout_constraintEnd_toStartOf="@+id/cb_complete"
            app:layout_constraintStart_toEndOf="@+id/tv_habit_icon"
            app:layout_constraintTop_toBottomOf="@+id/tv_habit_name"
            tools:text="Go for a 30-minute run or walk." />

        <ProgressBar
            android:id="@+id/progress_habit"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="50"
            android:progressTint="#4CAF50"
            app:layout_constraintEnd_toStartOf="@+id/tv_progress_text"
            app:layout_constraintStart_toStartOf="@+id/tv_habit_description"
            app:layout_constraintTop_toBottomOf="@+id/tv_habit_description"
            tools:progress="50" />

        <TextView
            android:id="@+id/tv_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/progress_habit"
            app:layout_constraintEnd_toStartOf="@+id/cb_complete"
            app:layout_constraintStart_toEndOf="@+id/progress_habit"
            app:layout_constraintTop_toTopOf="@id/progress_habit"
            tools:text="1/2" />

        <CheckBox
            android:id="@+id/cb_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:button="@drawable/selector_habit_checkbox"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_delete"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete habit"
            android:padding="8dp"
            android:src="@android:drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#DE4836" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>